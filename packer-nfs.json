{
  "variables": {
    "tag": "latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "phusion/baseimage:latest",
      "export_path": "nfs.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "HOME=/root"
      ],
      "inline": [
        "/etc/my_init.d/00_regen_ssh_host_keys.sh",
        "apt-get update -y",
        "apt-get install -y curl"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["chef-repo/cookbooks", "chef-repo/site-cookbooks"],
      "roles_path": "chef-repo/roles",
      "run_list": ["role[nfs]"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "cluster/network-file-system",
      "tag": "{{user `tag`}}"
    }
  ]
}
