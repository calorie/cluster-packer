{
  "run_list": ["role[mpi]"],
  "user": "mpi",
  "tz": "Asia/Tokyo",
  "authorization": {
    "sudo": {
      "groups": ["sysadmin", "mpi"],
      "users": ["mpi"],
      "passwordless": "true",
      "sudoers_defaults": [
        "env_reset",
        "mail_badpass",
        "secure_path=\"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin\"",
        "timestamp_timeout = 1440"
      ]
    }
  }
}
